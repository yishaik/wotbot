# Copy to .env and fill in secrets

# Public base URL for webhooks (e.g., https://abcd1234.ngrok-free.app)
PUBLIC_BASE_URL=

# Twilio credentials and WhatsApp numbers
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
TWILIO_VALIDATE_SIGNATURE=false

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_USE_RESPONSES=false
OPENAI_USE_ASSISTANTS=false
OPENAI_ASSISTANT_ID=
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=600

# Admin numbers (comma-separated, must match exact From value e.g. whatsapp:+12223334444)
ADMIN_PHONE_NUMBERS=

# Tooling controls
ALLOW_HTTP_DOMAINS=*
CODE_EXEC_TIMEOUT_SEC=5
CODE_EXEC_MEMORY_MB=128
HTTP_TIMEOUT_SEC=12

# MCP servers (comma separated). Each value is a base HTTP URL for JSON-RPC endpoint
MCP_SERVERS=
MCP_TOKEN=

# Paths
LOGS_DIR=logs
CONFIG_DIR=data/config

# Default developer mode
DEVELOPER_MODE_DEFAULT=false

# Admin web
ADMIN_WEB_USERNAME=
ADMIN_WEB_PASSWORD=

# Config overrides persistence file
OVERRIDES_PATH=data/config/settings.json
